    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contenedor_medir"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:id="@+id/medidor"
            android:layout_weight="0.38">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:id="@+id/linearInfoMed">

                <TextView
                    android:text="Información medidor"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtTitMed"
                    android:gravity="right"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="normal|bold|italic"
                    android:textAllCaps="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearNovMed">

                <TextView
                    android:text="Cod. Nov.:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNov" />

                <EditText
                    android:layout_width="39dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/edtCodNov" />

                <Spinner
                    android:layout_width="144dp"
                    android:layout_height="match_parent"
                    android:id="@+id/spCodNov"
                    android:layout_weight="0.78" />

                <TextView
                    android:text="Descrip. Novedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDesNov"
                    android:layout_weight="1.04" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/linearEstMed">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08">

                    <EditText
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:text="Estado actual"
                        android:ems="10"
                        android:id="@+id/edtEstAct" />

                    <TextView
                        android:text="Est. Ant."
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtEstAnt" />

                    <TextView
                        android:text="Consumo"
                        android:layout_width="177dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txtConsumo"
                        android:gravity="right"
                        android:background="@android:color/black"
                        android:textColor="@android:color/background_light"
                        android:paddingRight="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingTop="10dp"
                        android:textSize="24sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Guardar"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnGuardar"
                android:layout_gravity="right"/>

